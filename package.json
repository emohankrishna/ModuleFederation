{
  "version": "1.0.0",
  "name": "module-federation",
  "description": "Micro Frond ends implementation using webpack Module Federation Plugin",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "start": "lerna run --parallel --stream start",
    "build": "lerna run build --stream",
    "serve": "lerna run --scope @packages/* --parallel serve",
    "clean": "lerna run --scope @packages/* --parallel clean"
  },
  "devDependencies": {
    "lerna": "^6.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emohankrishna/ModuleFederation.git"
  },
  "license": "UNLICENSED",
  "author": "Ede Mohan Krishna"
}